<div class="container text-center padded">
  <div class="row">
    <% @reviews.each do |review| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card ">
      <div class="card-description">
        <h2><%= review.description %></h2>
        <p><%= review.stars %></p>
        <p><%= review.sender.email %></p>
      </div>
    </div>

    </div>
    <% end %>
  </div>
  <div class="button-remove-service padded">
    <%= link_to "add a new review", new_account_review_path, class: 'btn btn-info'%>
  </div>
</div>
