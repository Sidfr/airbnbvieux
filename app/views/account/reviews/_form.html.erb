
<div class="form padded text-center">
  <div class="col-sm-4 col-md-offset-4">
    <%= simple_form_for @review, url: url do |f| %>
    <%= f.input :description %>
    <%= f.input :stars %>
    <%= f.input :recipient_id, as: :select, collection: @recipients %>

    <p>
      <%= f.button :submit, class: "btn btn-info" %>
    </p>
    <% end %>

  </div>
</div>
