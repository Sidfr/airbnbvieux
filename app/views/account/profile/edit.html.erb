<div class="form padded text-center">
  <h1> Update your profile </h1>
  <br>
  <p><b>Your email address =></b> <%="#{current_user.email} "%></p>
  <br>

  <div class="col-sm-4 col-md-offset-4">
    <%= simple_form_for @profile, url: account_profile_path do |f| %>
    <%= f.input :last_name %>
    <%= f.input :first_name %>
    <%= f.input :address %>
    <%= f.input :expert , as: :boolean %>
    <hr>
    <p> <%= f.button :submit, class: "btn btn-info" %></p>
    <% end %>
  </div>
</div>
