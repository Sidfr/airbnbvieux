
<div class="form padded text-center">
  <div class="col-sm-4 col-md-offset-4">
  <%= simple_form_for @profile, url: account_profile_path do |f| %>
    <%= f.input :last_name %>
    <%= f.input :first_name %>
    <%= f.input :address %>
    <%= f.input :expert , as: :boolean %>

    <p>
      <%= f.button :submit, class: "btn btn-info" %>
    </p>
    <% end %>

  </div>
</div>


